<!DOCTYPE html>
<html>
<head>
  <title>WG-Tool</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a href="/" class="brand">W9Tool</a>
        <ul class="nav">
          <% if current_user %>
            <li><%= link_to "Rechnungen", invoices_path  %></li>
            <li><%= link_to "Einkaufsliste", articles_path %></li>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <% if current_user %>
            <li><%= link_to "Logout", signout_path %></li>
          <% end %>
          <li><%= link_to "About", :controller => "application", :action => "about"  %></li>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="content">
      <%- flash.each do |key, msg| -%>
        <div class="span6 alert <%= key %>">
          <button class="close" data-dismiss="alert">Ã—</button>
          <%= msg %>
        </div>
      <%- end -%>
      <div class="row">
        <div class="span12">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
